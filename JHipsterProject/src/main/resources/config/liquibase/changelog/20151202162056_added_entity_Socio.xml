<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Socio.
    -->
    <changeSet id="20151202162056" author="jhipster">
        <createTable tableName="socio">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nombre" type="varchar(255)"/>
            <column name="fecha_nacimiento" type="date"/>
        </createTable>
        
        <createTable tableName="socio_equipos_es_socio">
            <column name="equipos_es_socios_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="socios_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="socios_id, equipos_es_socios_id" tableName="socio_equipos_es_socio"/>

        <addForeignKeyConstraint baseColumnNames="socios_id"
                                 baseTableName="socio_equipos_es_socio"
                                 constraintName="fk_socio_equiposessocio_equipo_id"
                                 referencedColumnNames="id"
                                 referencedTableName="socio"/>

        <addForeignKeyConstraint baseColumnNames="equipos_es_socios_id"
                                 baseTableName="socio_equipos_es_socio"
                                 constraintName="fk_equipo_equiposessocio_socio_id"
                                 referencedColumnNames="id"
                                 referencedTableName="equipo"/>
        
    </changeSet>
</databaseChangeLog>
